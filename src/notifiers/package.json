{
  "name": "@sigyn/notifiers",
  "version": "1.0.0",
  "description": "Helpers to build a Sigyn notifier",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --external @myunisoft/httpie",
    "prepublishOnly": "npm run build",
    "test": "node --test ./test/**/*.spec.ts",
    "coverage": "c8 -r html npm test",
    "lint": "eslint src test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenAlly/sigyn.git",
    "directory": "src/notifiers"
  },
  "bugs": {
    "url": "https://github.com/OpenAlly/sigyn/issues"
  },
  "homepage": "https://github.com/OpenAlly/sigyn/blob/main/src/notifiers/README.md",
  "files": [
    "dist"
  ],
  "keywords": [],
  "author": "GENTILHOMME Thomas <gentilhomme.thomas@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "@myunisoft/httpie": "^2.0.3"
  }
}
